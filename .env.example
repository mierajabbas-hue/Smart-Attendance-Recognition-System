# Application Settings
APP_NAME=Smart Attendance & Recognition System
VERSION=1.0.0
DEBUG=True

# API Settings
API_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Database Settings
# SQLite (default)
DATABASE_URL=sqlite:///./database/attendance.db
# PostgreSQL (uncomment to use)
# DATABASE_URL=postgresql://username:password@localhost/attendance_db

# Security Settings
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Face Recognition Settings
FACE_RECOGNITION_TOLERANCE=0.6
FACE_DETECTION_MODEL=hog
NUM_JITTERS=1
FACE_ENCODING_MODEL=large

# Camera Settings
CAMERA_ID=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# File Storage
UPLOAD_FOLDER=./uploads
FACE_EMBEDDINGS_FOLDER=./models/face_embeddings
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
